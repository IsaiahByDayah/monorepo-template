{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "NodeJS Library",
  "extends": "./base.json",
  "compilerOptions": {
    "allowJs": true,
    "declaration": false,
    "declarationMap": false,
    "jsx": "preserve",
    "module": "esnext",
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": false,
    "target": "ES2022"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
