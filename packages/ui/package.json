{
  "name": "@repo/ui",
  "version": "0.0.0",
  "sideEffects": [
    "**/*.css"
  ],
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    "./styles.css": "./dist/index.css",
    ".": "./dist"
  },
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "build": "tsup & tailwindcss -i ./src/styles.css -o dist/index.css",
    "dev": "tsup --watch & tailwindcss -i ./src/styles.css -o dist/index.css --watch",
    "lint": "eslint src/ && tsc --noEmit --incremental"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@repo/tailwind-config": "workspace:*",
    "@repo/tsconfig": "workspace:*",
    "@types/react": "^18.2.5",
    "autoprefixer": "^10.4.13",
    "clsx": "^2.0.0",
    "eslint-config-custom": "workspace:*",
    "postcss": "^8.4.20",
    "react": "^18.2.0",
    "tailwindcss": "^3.4.1",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3"
  }
}
